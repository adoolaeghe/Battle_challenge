    <div>
      <form action="/big_attack_player_2" name="big_attack_2" method="post">
        <input class ="Big_attack_1" type="submit" value="Big Attack Player 2" >
      </form>
    </div>
  </div>

  <div style= 'text-align: center; margin-left: 500px'>
    <div>
      <img src="https://static.wixstatic.com/media/f5051e_605ec95e131046eaaf87cddcaf9362c3~mv2_d_3100_2382_s_2.jpg_srz_3100_2382_85_22_0.50_1.20_0.00_jpg_srz" alt="LOOSE" style="width:300px">
      <div> </div>
      <div style='font-size: 30px'>
        <%= $game.player_2.name %>'s HP: <%= $game.player_2.hp %>
      </div>
      <form action="/attack_player_1" name="attack_1" method="post">
        <input type="submit" value="Attack Player 1" >
      </form>
    </div>

    <div>
      <form action="/big_attack_player_1" name="big_attack_1" method="post">
        <input class ="Big_attack_2" type="submit" value="Big Attack Player 1" >
      </form>
    </div>
  </div>
